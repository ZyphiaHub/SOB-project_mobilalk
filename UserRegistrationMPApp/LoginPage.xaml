<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login Page"
			 x:Class="UserRegistrationMPApp.LoginPage">
    <ContentPage.BackgroundImageSource>background.jpg</ContentPage.BackgroundImageSource>
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Welcome Back!" FontSize="24" HorizontalOptions="Center"/>
        <Entry Placeholder="Email" x:Name="EmailEntry" />
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" />
        <Button Text="Login" Clicked="OnLoginClicked" />
        <Label Text="Don't have an account?" FontSize="14" HorizontalOptions="Center" />
        <Button Text="Register" Opacity="0.9" Clicked="OnRegisterClicked" />
    </VerticalStackLayout>
</ContentPage>
